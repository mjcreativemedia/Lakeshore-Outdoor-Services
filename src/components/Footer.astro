---
import { business } from "../data/business";

const { address } = business;
const hasStreet = address.street.trim().length > 0;
const hasPostal = address.postal.trim().length > 0;
const locationLine = [address.city, address.region, hasPostal ? address.postal : null]
  .filter(Boolean)
  .join(" ");
---
<footer class="site-footer">
  <div class="container">
    <div>
      <h2>{business.name}</h2>
      <p>
        <a href={`tel:${business.phone}`}>{business.phoneDisplay}</a><br />
        <a href={`mailto:${business.email}`}>{business.email}</a>
      </p>
      <address>
        {hasStreet && (
          <>
            {address.street}
            <br />
          </>
        )}
        {locationLine}
        <br />
        {address.country}
      </address>
    </div>
    <p class="copyright">&copy; {new Date().getFullYear()} {business.name}. All rights reserved.</p>
  </div>
</footer>

<style>
  .site-footer {
    background: #1b263b;
    color: #e0e1dd;
    padding: 2rem 1rem;
  }

  .container {
    margin: 0 auto;
    max-width: 960px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  a {
    color: inherit;
  }

  address {
    font-style: normal;
    line-height: 1.5;
  }

  .copyright {
    font-size: 0.875rem;
    opacity: 0.75;
  }
</style>
